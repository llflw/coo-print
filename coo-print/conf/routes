# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /editItems                   controllers.Application.editItems

POST    /login                      controllers.Application.login

GET     /logout                      controllers.Application.logout

POST    /upload                     controllers.Application.upload

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /props/:mid                 controllers.Application.props(mid)

DELETE  /item/:fileName             controllers.Application.delItem(fileName)

POST    /submitOrder                controllers.Application.submitOrder